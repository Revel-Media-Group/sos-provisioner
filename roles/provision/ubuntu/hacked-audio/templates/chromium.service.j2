[Unit]
Description=revel signageOS chromium unit
PartOf=graphical-session.target
Requires=signageos-server.service
After=systemd-logind.service systemd-user-sessions.service

[Service]
Type=simple
User={{ user }}
Group={{ user }}
Restart=on-failure
ExecStart=/usr/bin/revel-chromium

[Install]
WantedBy=graphical.target
